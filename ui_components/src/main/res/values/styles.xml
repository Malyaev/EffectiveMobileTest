<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Style.App.TextInputLayout.OnBackground" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="hintTextColor">?attr/hintTextColor</item>
        <item name="shapeAppearanceOverlay">@style/Style.App.Rounded</item>
    </style>
    <style name="Style.App.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="hintTextColor">?attr/hintTextColor</item>
        <item name="shapeAppearanceOverlay">@style/Style.App.Rounded.ExtraLight</item>
    </style>
    <style name="Style.App.MaterialAutoCompleteTextView.Light" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="fontFamily">@font/mark_pro_light</item>
    </style>
    <style name="Style.App.EditText.OnBackground" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/dark_violet</item>
        <item name="fontFamily">@font/mark_pro_normal</item>
        <item name="backgroundTint">?attr/colorSurface</item>
    </style>
    <style name="Style.App.ImageButton.Round" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/round</item>
    </style>
    <style name="Style.App.ImageButton.Square" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/square</item>
    </style>
    <style name="Style.App.Button.Filled.Secondary">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>
    <style name="Style.App.Button.Filled.Rounded">
        <item name="shapeAppearanceOverlay">@style/Style.App.Rounded.Light</item>
    </style>
    <style name="Style.App.Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAppearanceButton">@style/Style.App.TextAppearance.Button</item>
        <item name="android:textAppearance">@style/Style.App.TextAppearance.Button</item>
    </style>
    <style name="Style.App.TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/mark_pro</item>
        <item name="android:fontFamily">@font/mark_pro</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Style.App.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAppearance">@style/Style.App.TextAppearance.Button.TextButton</item>
    </style>
    <style name="Style.App.TextAppearance.Button.TextButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/mark_pro_light</item>
        <item name="android:fontFamily">@font/mark_pro_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Style.App.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/mark_pro_normal</item>
        <item name="android:fontFamily">@font/mark_pro_normal</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="Style.App.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    <style name="Style.App.Rounded.Light">
        <item name="cornerSize">10dp</item>
    </style>
    <style name="Style.App.Rounded.ExtraLight">
        <item name="cornerSize">5dp</item>
    </style>

</resources>
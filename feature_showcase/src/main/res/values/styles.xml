<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Style.FetureShowcase.TextInputLayout.Location" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">?attr/background</item>
        <item name="startIconDrawable">@drawable/location</item>
        <item name="startIconTint">?attr/colorSecondary</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="endIconDrawable">@drawable/drop_down</item>
        <item name="endIconMode">custom</item>
    </style>
    <style name="Style.FetureShowcase.MaterialAutoCompleteTextView.Location" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textSize">19sp</item>

        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="fontFamily">@font/mark_pro_normal</item>
    </style>
    <style name="Style.FetureShowcase.TextInputLayout.OnBackground" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="hintTextColor">?attr/hintTextColor</item>
        <item name="shapeAppearanceOverlay">@style/Style.FetureShowcase.Rounded</item>
    </style>
    <style name="Style.FetureShowcase.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="endIconDrawable">@drawable/drop_down</item>
        <item name="endIconMode">custom</item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="hintTextColor">?attr/hintTextColor</item>
        <item name="boxStrokeColor">?attr/outlined_color</item>

        <item name="shapeAppearanceOverlay">@style/Style.FetureShowcase.Rounded.ExtraLight</item>
    </style>
    <style name="Style.FetureShowcase.MaterialAutoCompleteTextView.Light" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="fontFamily">@font/mark_pro_light</item>
    </style>
    <style name="Style.FetureShowcase.EditText.OnBackground" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/dark_violet</item>
        <item name="fontFamily">@font/mark_pro_normal</item>
        <item name="backgroundTint">?attr/colorSurface</item>
    </style>
    <style name="Style.FetureShowcase.Button.Round.Secondary" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/round</item>
    </style>
    <style name="Style.FetureShowcase.Button.Square" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/square</item>
    </style>
    <style name="Style.FetureShowcase.Button.Filled.HotSales" parent="Style.FetureShowcase.Button.Filled">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="backgroundTint">@color/white</item>
        <item name="textAppearanceButton">@style/Style.FetureShowcase.TextAppearance.Button.HotSales</item>
        <item name="android:textAppearance">@style/Style.FetureShowcase.TextAppearance.Button.HotSales</item>
    </style>
    <style name="Style.FetureShowcase.Button.Filled.Secondary">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>
    <style name="Style.FetureShowcase.Button.Filled.Rounded">
        <item name="shapeAppearanceOverlay">@style/Style.FetureShowcase.Rounded.Light</item>
    </style>
    <style name="Style.FetureShowcase.Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAppearanceButton">@style/Style.FetureShowcase.TextAppearance.Button</item>
        <item name="android:textAppearance">@style/Style.FetureShowcase.TextAppearance.Button</item>
    </style>
    <style name="Style.FetureShowcase.TextAppearance.Button.HotSales" parent="Style.FetureShowcase.TextAppearance.Button">
        <item name="fontFamily">@font/sfprodisplay_bold</item>
        <item name="android:fontFamily">@font/sfprodisplay_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="Style.FetureShowcase.TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/mark_pro</item>
        <item name="android:fontFamily">@font/mark_pro</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Style.FetureShowcase.Button.TitleTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAppearance">@style/Style.FetureShowcase.TextAppearance.Button.TitleTextButton</item>
    </style>
    <style name="Style.FetureShowcase.TextAppearance.Button.TitleTextButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/mark_pro_light</item>
        <item name="android:fontFamily">@font/mark_pro_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Style.FetureShowcase.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    <style name="Style.FetureShowcase.Rounded.Light">
        <item name="cornerSize">10dp</item>
    </style>
    <style name="Style.FetureShowcase.Rounded.ExtraLight">
        <item name="cornerSize">5dp</item>
    </style>

</resources>
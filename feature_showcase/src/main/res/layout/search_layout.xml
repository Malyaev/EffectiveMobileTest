<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Style.FetureShowcase.TextInputLayout.OnBackground"
        android:layout_width="300dp"
        android:layout_height="34dp"
        android:hint="@string/search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/qrButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/search"
        app:startIconTint="?attr/colorSecondary">

        <androidx.appcompat.widget.AppCompatEditText
            style="@style/Style.FetureShowcase.EditText.OnBackground"
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="some text" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/qrButton"
        style="@style/Style.FetureShowcase.Button.Round.Secondary"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/qr"
        android:layout_marginLeft="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textInputLayout"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
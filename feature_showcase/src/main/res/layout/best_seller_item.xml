<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="181dp"
    android:layout_height="227dp"
    app:cardCornerRadius="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@sample/image_best_seller"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="55dp"
            />

        <ImageButton
            android:id="@+id/like"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/like_checkbox"
            android:background="@drawable/round"
            android:backgroundTint="@color/white"

            />

        <TextView
            android:id="@+id/discount_prise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mark_pro_extra_bold"
            android:textSize="16sp"
            tools:text="$1,020"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/image"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="21dp"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:id="@+id/prise_without_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mark_pro_extra_bold"
            android:textSize="10sp"
            tools:text="$1,500"
            android:textColor="?attr/prise_without_discount_color"
            app:layout_constraintBaseline_toBaselineOf="@id/prise"
            app:layout_constraintStart_toEndOf="@id/prise"
            android:layout_marginStart="7dp"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mark_pro_extra_bold"
            android:textSize="10sp"
            tools:text="Samsung Galaxy s20 Ultra"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/prise"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="21dp"
            android:layout_marginTop="5dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
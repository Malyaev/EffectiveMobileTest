<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Style.FeatureMyCart.ButtonToggleGroup.PlusMinus"
        parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="strokeWidth">0dp</item>
        <item name="backgroundTint">@color/on_primary_25</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="shapeAppearanceOverlay">@style/Style.App.Rounded.Light</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="iconPadding">0dp</item>
        <item name="minHeight">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="rippleColor">@color/on_primary_25</item>
    </style>
    <style name="Style.FeatureMyCart.Button.Checkout" parent="Style.App.Button.Filled.Rounded">
        <item name="android:textAppearance">@style/Style.FeatureMyCart.TextAppearance.Button</item>
    </style>
    <style name="Style.FeatureMyCart.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/Style.FeatureMyCart.TextAppearance.Toolbar</item>
    </style>
    <style name="Style.FeatureMyCart.TextAppearance.Toolbar.Expanded">
        <item name="android:textSize">35sp</item>
    </style>
    <style name="Style.FeatureMyCart.TextAppearance.Toolbar" parent="Style.FeatureMyCart.TextAppearance.Button">
        <item name="fontFamily">@font/mark_pro_extra_bold</item>
        <item name="android:fontFamily">@font/mark_pro_extra_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="color">?attr/colorSecondary</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Style.FeatureMyCart.TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/mark_pro_extra_bold</item>
        <item name="android:fontFamily">@font/mark_pro_extra_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
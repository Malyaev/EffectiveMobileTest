<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/Style.App.TextAppearance"
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        tools:text="Galaxy Note 20 Ultra"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginStart="38dp"
        />

    <ImageButton
        style="@style/Style.FeatureProduct.ImageButton.Square"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:src="@drawable/like_checkbox"
        app:tint="?attr/colorOnPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/product_name"
        app:layout_constraintTop_toTopOf="@id/product_name"
        android:layout_marginEnd="37dp"
        />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/stars"
        android:layout_width="150dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="@id/product_name"
        app:layout_constraintTop_toBottomOf="@id/product_name"
        android:layout_marginTop="7dp"
        >
        <include android:layout_width="18dp"
            android:layout_height="18dp"
            layout="@layout/star_chip"
            tools:ignore="true"/>
        <include android:layout_width="18dp"
            android:layout_height="18dp"
            layout="@layout/star_chip"
            tools:ignore="true"/>
        <include android:layout_width="18dp"
            android:layout_height="18dp"
            layout="@layout/star_chip"
            tools:ignore="true"/>
        <include android:layout_width="18dp"
            android:layout_height="18dp"
            layout="@layout/star_chip"
            tools:ignore="true"/>
        <include android:layout_width="18dp"
            android:layout_height="18dp"
            layout="@layout/star_chip"
            tools:ignore="true"/>

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.tabs.TabLayout
        style="@style/Style.FeatureProduct.TabLayout"
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/background"
        app:layout_constraintTop_toBottomOf="@+id/stars"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="27dp"
        >
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shop"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feature"/>
    </com.google.android.material.tabs.TabLayout>
        
</androidx.constraintlayout.widget.ConstraintLayout>